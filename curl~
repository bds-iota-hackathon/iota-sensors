  -d '{"command": "getBalances", "addresses": ["WWPJTKWJUEVDTCOAJBHRZVRVXAZDEAA9LILHUX9WUKBEYMGHZVQUNIZNONHLETSOUHZVGSPASVWVOSSMA"], "threshold": 100}'

